{
  "name": "test-task-for-test-automation-engineer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "cy": "yarn cy:open",
    "cy:open": "cross-env NODE_ENV=test ELECTRON_EXTRA_LAUNCH_ARGS=--lang=ru cypress open --config-file cypress.config.ts --browser electron --e2e",
    "lint": "yarn lint:ts && yarn lint:js",
    "lint:js": "yarn lint:js:src && yarn lint:js:cypress",
    "lint:js:cypress": "eslint cypress --config ./cypress/.eslintrc.json --ext ts,tsx --ignore-path .gitignore --report-unused-disable-directives --max-warnings 0",
    "lint:js:src": "eslint src --ext ts,tsx --ignore-path .gitignore --report-unused-disable-directives --max-warnings 0",
    "lint:ts": "yarn lint:ts:src && yarn lint:ts:cypress",
    "lint:ts:cypress": "tsc --project cypress/tsconfig.json",
    "lint:ts:src": "tsc",
    "prepare": "husky"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@badeball/cypress-cucumber-preprocessor": "^20.1.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "cross-env": "7.0.3",
    "cross-var": "^1.1.0",
    "cypress": "13.13.0",
    "cypress-on-fix": "^1.0.3",
    "cypress-real-events": "^1.13.0",
    "cypress-wait-until": "3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^54.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.5.3"
  }
}
